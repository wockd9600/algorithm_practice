   "source": [
    "n = int(input())\n",
    "dp = [0] * (n + 1)\n",
    "if n > 1: dp[2] = 3\n",
    "\n",
    "for i in range(4, n + 1, 2):\n",
    "    dp[i] = dp[i-2] * 3 + sum(dp[:i-3]) * 2 + 2\n",
    "\n",
    "print(dp[n])"
   ]
  }
